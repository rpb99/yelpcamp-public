<% include ../partials/header %>
<div id="newCampground" class="container">
	<div class="row">
		<div class="col text-center">
			<h1 class="display-4 mb-3">Edit <%= campground.name %></h1>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-5">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" value="<%= campground.price %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="Image Url" value="<%= campground.image %>">
				</div>
				<div class="form-group">
				  <textarea class="form-control" name="campground[description]" rows="3" placeholder="Description"><%= campground.description %></textarea>
				</div>
				<button class="form-control btn btn-primary">Submit</button>
			</form>
			<a href="/campgrounds/<%= campground._id%>">Go Back! </a>
		</div>
	</div>
</div>
<% include ../partials/footer %>