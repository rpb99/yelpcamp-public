<% include ../partials/header %>

<div class="container" id="newCampground">
	<header class="jumbotron">
		<div class="container">
			<h1 class="h1">Welcome To Yelpcamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<a class="btn btn-md btn-primary" href="/campgrounds/new">Add New Campground</a>
		</div>
	</header>



	<div class="row" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach((campground) => { %>
		<div class="col-lg-3 col-md-4 col-sm-6">
			<div class="card text-center mb-4" style="height: 22rem;">
				<img src="<%= campground.image %>" style="height: 14rem;">
				<div class="card-body">
					<h4 class="card-title text-center"><%= campground.name %></h4>
					<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
				</div>
			</div>
		</div>

		<% }); %>

	</div>
</div>
<% include ../partials/footer %>