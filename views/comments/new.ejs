<% include ../partials/header %>
<div id="newCampground" class="container">
	<div class="row">
		<div class="col text-center text-white">
			<h1 class="display-4 mb-3">Add New Comment to <%= campground.name%></h1>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-5">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Text">
				</div>
				<button class="form-control btn btn-primary">Submit</button>
			</form>
			<a href="/campgrounds/<%= campground._id%>">Go Back! </a>
		</div>
	</div>
</div>
<% include ../partials/footer %>